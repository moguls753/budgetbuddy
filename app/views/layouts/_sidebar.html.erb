<aside class="flex flex-col w-80 h-screen overflow-y-auto bg-charcoal text-cream border-r-4 border-salmon">
  <!-- Header with dramatic branding -->
  <div class="px-8 py-12 bg-gradient-to-br from-charcoal to-near-black border-b-2 border-salmon/30">
    <a href="/" class="block">
      <h1 class="font-display text-4xl text-salmon mb-2 tracking-tight leading-none">Budget<br/>Buddy</h1>
      <p class="font-mono text-xs text-gold uppercase tracking-widest">Financial Dashboard</p>
    </a>
  </div>

  <div class="flex flex-col justify-between flex-1">
    <nav class="px-6 py-8 space-y-6">
      <!-- Home link - bold and prominent -->
      <a href="/" class="group block px-4 py-3 border-l-4 border-transparent hover:border-salmon transition-all duration-300">
        <div class="flex items-center justify-between">
          <span class="font-sans font-semibold text-lg text-cream group-hover:text-salmon transition-colors">Home</span>
          <svg class="w-5 h-5 text-gold group-hover:text-salmon transition-colors" viewBox="0 0 24 24" fill="none">
            <path d="M3 9L12 2L21 9V20C21 21.1046 20.1046 22 19 22H5C3.89543 22 3 21.1046 3 20V9Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M9 22V12H15V22" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      </a>

      <!-- Accounts section with editorial typography -->
      <div class="space-y-3">
        <h2 class="font-display text-sm text-gold uppercase tracking-widest px-4 mb-4">Accounts</h2>
        <% @accounts.each do |account| %>
          <div class="space-y-1">
            <button
              class="group flex items-center justify-between w-full px-4 py-3 text-left transition-all duration-300 border-l-4 border-transparent hover:border-gold"
              onclick="this.nextElementSibling.classList.toggle('hidden'); this.querySelector('.chevron').classList.toggle('rotate-180')"
            >
              <span class="font-sans font-semibold text-cream group-hover:text-salmon transition-colors"><%= account.name.capitalize %></span>
              <svg class="chevron w-4 h-4 text-gold transform transition-transform duration-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M6 9l6 6 6-6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
            <ul class="ml-8 space-y-1 hidden">
              <li>
                <a href="<%= account_path(account) %>" class="block px-4 py-2 text-sm text-cream/70 hover:text-salmon hover:bg-near-black/50 transition-all duration-200">
                  Overview
                </a>
              </li>
              <li>
                <a href="#" class="block px-4 py-2 text-sm text-cream/70 hover:text-salmon hover:bg-near-black/50 transition-all duration-200">
                  Forecast
                </a>
              </li>
              <li>
                <a href="#" class="block px-4 py-2 text-sm text-cream/70 hover:text-salmon hover:bg-near-black/50 transition-all duration-200">
                  Settings
                </a>
              </li>
            </ul>
          </div>
        <% end %>
      </div>

      <!-- Diagonal divider -->
      <div class="diagonal-divider h-8"></div>

      <!-- Secondary navigation -->
      <div class="space-y-2">
        <a href="#" class="group flex items-center px-4 py-3 border-l-4 border-transparent hover:border-gold transition-all duration-300">
          <svg class="w-5 h-5 text-gold group-hover:text-salmon transition-colors mr-3" viewBox="0 0 24 24" fill="none">
            <path d="M16 7C16 9.20914 14.2091 11 12 11C9.79086 11 8 9.20914 8 7C8 4.79086 9.79086 3 12 3C14.2091 3 16 4.79086 16 7Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M5 21V19C5 17.8954 5.89543 17 7 17H17C18.1046 17 19 17.8954 19 19V21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <span class="font-sans text-cream/70 group-hover:text-salmon transition-colors">My Profile</span>
        </a>

        <a href="#" class="group flex items-center px-4 py-3 border-l-4 border-transparent hover:border-gold transition-all duration-300">
          <svg class="w-5 h-5 text-gold group-hover:text-salmon transition-colors mr-3" viewBox="0 0 24 24" fill="none">
            <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="2"/>
            <path d="M19.4 15A1.65 1.65 0 0 0 21 13.6V10.4A1.65 1.65 0 0 0 19.4 9L17.8 7.2A1.65 1.65 0 0 0 16.4 5.8L13.8 5.4A1.65 1.65 0 0 0 12 4A1.65 1.65 0 0 0 10.2 5.4L7.6 5.8A1.65 1.65 0 0 0 6.2 7.2L4.6 9A1.65 1.65 0 0 0 3 10.4V13.6A1.65 1.65 0 0 0 4.6 15L6.2 16.8A1.65 1.65 0 0 0 7.6 18.2L10.2 18.6A1.65 1.65 0 0 0 12 20A1.65 1.65 0 0 0 13.8 18.6L16.4 18.2A1.65 1.65 0 0 0 17.8 16.8L19.4 15Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <span class="font-sans text-cream/70 group-hover:text-salmon transition-colors">Settings</span>
        </a>
      </div>
    </nav>

    <!-- User info at bottom - editorial style -->
    <div class="px-6 py-6 bg-near-black border-t-2 border-salmon/20">
      <div class="flex items-center space-x-4 px-4">
        <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-salmon to-gold rounded-full flex items-center justify-center">
          <span class="font-display text-xl text-charcoal font-bold"><%= Current.user.first_name[0].upcase %></span>
        </div>
        <div class="flex-1 min-w-0">
          <p class="font-sans font-semibold text-cream truncate"><%= Current.user.first_name %></p>
          <p class="font-mono text-xs text-gold uppercase tracking-wide">Account</p>
        </div>
      </div>
    </div>
  </div>
</aside>
